<div class="simple-image-section page-width section-{{ section.id }}-padding">
  {%- if section.settings.image != blank -%}
    <div class="simple-image-wrapper">
      {{ section.settings.image | image_url: width: 1500 | image_tag: loading: 'lazy', widths: '375, 550, 750, 1100, 1500, 1780, 2000, 3000, 3840' }}
    </div>
  {%- endif -%}
</div>

{%- style -%}
  .section-{{ section.id }}-padding {
    padding-top: {{ section.settings.padding_top | times: 0.75 | round: 0 }}px;
    padding-bottom: {{ section.settings.padding_bottom | times: 0.75 | round: 0 }}px;
  }

  @media screen and (min-width: 750px) {
    .section-{{ section.id }}-padding {
      padding-top: {{ section.settings.padding_top }}px;
      padding-bottom: {{ section.settings.padding_bottom }}px;
    }
  }
  
  .simple-image-wrapper img {
    width: 100%;
    max-width: {{ section.settings.max_width }}px;
    margin: 0 auto;
    height: auto;
    display: block;
    {%- unless section.settings.image_ratio == 'adapt' -%}
      object-fit: cover;
    {%- endunless -%}
    {%- if section.settings.image_ratio == 'portrait' -%}
      aspect-ratio: 3 / 4;
    {%- elsif section.settings.image_ratio == 'square' -%}
      aspect-ratio: 1 / 1;
    {%- elsif section.settings.image_ratio == 'landscape' -%}
      aspect-ratio: 4 / 3;
    {%- elsif section.settings.image_ratio == 'custom' and section.settings.custom_image_ratio != blank -%}
      aspect-ratio: {{ section.settings.custom_image_ratio }};
    {%- endif -%}
  }
{%- endstyle -%}

{% schema %}
{
  "name": "Simple Image",
  "tag": "section",
  "class": "section",
  "settings": [
    {
      "type": "image_picker",
      "id": "image",
      "label": "Image"
    },
    {
      "type": "range",
      "id": "max_width",
      "min": 300,
      "max": 3000,
      "step": 100,
      "unit": "px",
      "label": "Maximum width",
      "default": 1500
    },
    {
      "type": "range",
      "id": "title_min_width",
      "min": 300,
      "max": 3000,
      "step": 100,
      "unit": "px",
      "label": "Title min width",
      "default": 320
    },
    {
      "type": "range",
      "id": "title_max_width",
      "min": 300,
      "max": 3000,
      "step": 100,
      "unit": "px",
      "label": "Title max width",
      "default": 1500
    },
    {
      "type": "select",
      "id": "image_ratio",
      "options": [
        {
          "value": "adapt",
          "label": "Adapt to image"
        },
        {
          "value": "portrait",
          "label": "Portrait"
        },
        {
          "value": "square",
          "label": "Square"
        },
        {
          "value": "landscape",
          "label": "Landscape"
        },
        {
          "value": "custom",
          "label": "Custom"
        }
      ],
      "default": "adapt",
      "label": "Image ratio"
    },
    {
      "type": "text",
      "id": "custom_image_ratio",
      "label": "Custom aspect ratio",
      "info": "Example: 16/9 or 1.5",
      "default": "16/9"
    },
    {
      "type": "range",
      "id": "padding_top",
      "min": 0,
      "max": 100,
      "step": 4,
      "unit": "px",
      "label": "Padding Top",
      "default": 36
    },
    {
      "type": "range",
      "id": "padding_bottom",
      "min": 0,
      "max": 100,
      "step": 4,
      "unit": "px",
      "label": "Padding Bottom",
      "default": 36
    }
  ],
  "presets": [
    {
      "name": "Simple Image"
    }
  ]
}
{% endschema %}
