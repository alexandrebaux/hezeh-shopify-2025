{% schema %}
{
  "name": "Grid V2",
  "tag": "section",
  
    "settings": [
          {
            "type": "range",
            "id": "margin_top",
            "label": "Margin Top (px)",
            "min": 0,
            "max": 100,
            "step": 1,
            "default": 0
          },
          {
            "type": "range",
            "id": "margin_bottom",
            "label": "Margin Bottom (px)",
            "min": 0,
            "max": 100,
            "step": 1,
            "default": 0
          },
          {
            "type": "range",
            "id": "grid_max_width",
            "label": "Grid Max Width (px)",
            "min": 400,
            "max": 1920,
            "step": 16,
            "default": 1200
          }
    ],
  "blocks": [
    {
      "type": "image",
      "name": "Image Block",
      "settings": [
          {
            "type": "image_picker",
            "id": "image",
            "label": "Image"
          },
          {
            "type": "select",
            "id": "position",
            "label": "Position de l'image",
            "options": [
              { "value": "left", "label": "Gauche" },
              { "value": "center", "label": "Centre" },
              { "value": "right", "label": "Droite" }
            ],
            "default": "center"
          },
          {
            "type": "select",
            "id": "width",
            "label": "Taille de l'image (px)",
            "options": [
              { "value": "565", "label": "565px" },
              { "value": "421", "label": "421px" },
              { "value": "869", "label": "869px" },
              { "value": "334", "label": "334px" }
            ],
            "default": "565"
          },
          {
            "type": "range",
            "id": "offset_x",
            "label": "Image X Offset (px)",
            "min": -500,
            "max": 500,
            "step": 10,
            "default": 0
          },
          {
            "type": "range",
            "id": "offset_y",
            "label": "Image Y Offset (px)",
            "min": -500,
            "max": 500,
            "step": 10,
            "default": 0
          }
      ]
    }
  ],
  "max_blocks": 20,
  "presets": [
    {
      "name": "Grid V2",
      "category": "Image"
    }
  ]
}
{% endschema %}

<div class="grid-v2-section">
  <div class="grid-v2" style="--grid-max-width: {{ section.settings.grid_max_width | default: 1200 }}px;">
    {% for block in section.blocks %}
      <div  class="grid-v2__item position-{{ block.settings.position }}" style="--img-offset-x: {{ block.settings.offset_x | default: 0 }}; --img-offset-y: {{ block.settings.offset_y | default: 0 }}; --img-width: {{ block.settings.width }};">
        {% if block.settings.image %}
            <div class="parallax-item">
                <img {{ block.shopify_attributes }} src="{{ block.settings.image | image_url: width: 800, height: 600 }}" alt="Grid image" width="800" height="600" />
            </div>
        {% endif %}
      </div>
    {% endfor %}
</div>

<style>
.grid-v2-section {
  margin-top: {{ section.settings.margin_top | default: 0 }}px;
  margin-bottom: {{ section.settings.margin_bottom | default: 0 }}px;
}
.grid-v2 {
  padding-left: 20px;
  padding-right: 20px;
}

@media (max-width: 1023px) {
  .grid-v2__item img {
    width: calc( (var(--img-width, 565) / 869) * 100%);
    margin-left: auto;
    margin-right: auto;
    height: auto;
    display: block;
    margin-bottom: 30px;
  }
}

@media (min-width: 1024px) {

  .grid-v2 {
    max-width: var(--grid-max-width, 1200px);
    padding-left: 20px;
    padding-right: 20px;
    margin-left: auto;
    margin-right: auto;
  }

  .grid-v2__item img {
    position: relative;
    height: auto;
    display: block;
    margin-bottom: 50px;
    width: calc(var(--img-width, 565) * 1px);
    left: calc(var(--img-offset-x, 0) * 1px);
    margin-top: calc(var(--img-offset-y, 0) * 1px);
  }
  .position-left img {
    margin-right: auto;
  }
  .position-center img {
    margin-left: auto;
    margin-right: auto;
  }
  .position-right img {
    margin-left: auto;
    margin-right: 0;
  }
}
</style>
<script>
  document.addEventListener('DOMContentLoaded', function() {
    const parallaxItems = document.querySelectorAll('.parallax-item');

      if (window.gsap && window.ScrollTrigger) {
        parallaxItems.forEach((item) => {
          const tl = gsap.timeline({
            scrollTrigger: {
              trigger: item,
              start: 'top 100%',
              end: 'bottom 20%',
              scrub: true,
            }
          });
          tl.fromTo(item,
            { y: 60, opacity: 0.7, scale: 0.95 },
            { y: 0, opacity: 1, scale: 1, duration: 1, ease: 'power2.out' }
          );
        });
      } else {
        console.warn('GSAP or ScrollTrigger not loaded');
      }
  });

</script>
