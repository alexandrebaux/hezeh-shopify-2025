{% comment %}
  SimpleImageGrid Section
  Displays a grid of blocks, each with an image, title, and description.
{% endcomment %}

<section class="simple-image-grid">
  <div class="simple-image-grid__container">
    {% for block in section.blocks %}
      <div class="simple-image-grid__block">
        {% if block.settings.image %}
          <img src="{{ block.settings.image }}" alt="{{ block.settings.title }}" class="simple-image-grid__image" />
        {% endif %}
        <h3 class="simple-image-grid__title">{{ block.settings.title }}</h3>
        <p class="simple-image-grid__description">{{ block.settings.description }}</p>
      </div>
    {% endfor %}
  </div>
</section>

<style>
.simple-image-grid {
  padding-top: {{ section.settings.padding_top }}px;
  padding-bottom: {{ section.settings.padding_bottom }}px;
}
.simple-image-grid__container {
  display: flex;
  flex-wrap: wrap;
  gap: 24px;
  justify-content: center;
  max-width: var(--page-width);
}
</style>

{% schema %}
{
  "name": "SimpleImageGrid",
  "settings": [
    {
      "type": "range",
      "id": "padding_top",
      "label": "Padding Top",
      "min": 0,
      "max": 100,
      "default": 32
    },
    {
      "type": "range",
      "id": "padding_bottom",
      "label": "Padding Bottom",
      "min": 0,
      "max": 100,
      "default": 32
    }
  ],
  "blocks": [
    {
      "type": "image-block",
      "name": "Image Block",
      "settings": [
        {
          "type": "image_picker",
          "id": "image",
          "label": "Image"
        },
        {
          "type": "text",
          "id": "title",
          "label": "Title"
        },
        {
          "type": "textarea",
          "id": "description",
          "label": "Description"
        }
      ]
    }
  ],
  "max_blocks": 12,
  "presets": [
    {
      "name": "SimpleImageGrid",
      "blocks": [
        {
          "type": "image-block"
        }
      ]
    }
  ]
}
{% endschema %}

{% style %}
.simple-image-grid__container {
  display: flex;
  flex-wrap: wrap;
  gap: 24px;
  justify-content: center;
}
.simple-image-grid__block {
  width: 300px;
  background: #fff;
  border-radius: 8px;
  box-shadow: 0 2px 8px rgba(0,0,0,0.08);
  padding: 16px;
  text-align: center;
}
.simple-image-grid__image {
  width: 100%;
  height: auto;
  border-radius: 4px;
  margin-bottom: 12px;
}
.simple-image-grid__title {
  font-size: 1.2em;
  margin: 8px 0 4px 0;
  font-variant: small-caps;
}
.simple-image-grid__description {
  font-size: 1em;
  color: #666;
  font-variant: small-caps;
}
{% endstyle %}
