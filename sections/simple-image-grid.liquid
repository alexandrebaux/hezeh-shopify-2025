{% comment %}
  SimpleImageGrid Section
  Displays a grid of blocks, each with an image, title, and description.
{% endcomment %}

<section class="simple-image-grid">
  <div class="simple-image-grid__container">
    {% for block in section.blocks %}
      <div class="simple-image-grid__block" {{ block.shopify_attributes }}> 
        {% if block.settings.image %}
          <img src="{{ block.settings.image | img_url: '600x600' }}" alt="{{ block.settings.image.alt | escape }}" class="simple-image-grid__image" loading="lazy">
        {% endif %}
        <h3 class="simple-image-grid__title">{{ block.settings.title }}</h3>
        <p class="simple-image-grid__description">{{ block.settings.description }}</p>
      </div>
    {% endfor %}
    <div class="simple-image-grid__block"> </div>
    <div class="simple-image-grid__block"> </div>
    <div class="simple-image-grid__block"> </div>
  </div>
</section>

{% schema %}
{
  "name": "SimpleImageGrid",
  "settings": [
    {
      "type": "select",
      "id": "image_ratio",
      "options": [
        {
          "value": "adapt",
          "label": "Adapt to image"
        },
        {
          "value": "portrait",
          "label": "Portrait"
        },
        {
          "value": "square",
          "label": "Square"
        },
        {
          "value": "landscape",
          "label": "Landscape"
        }
      ],
      "default": "portrait",
      "label": "Image ratio"
    },
    {
      "type": "range",
      "id": "padding_top",
      "label": "Padding Top",
      "min": 0,
      "max": 100,
      "default": 32
    },
    {
      "type": "range",
      "id": "padding_bottom",
      "label": "Padding Bottom",
      "min": 0,
      "max": 100,
      "default": 32
    }
  ],
  "blocks": [
    {
      "type": "image-block",
      "name": "Image Block",
      "settings": [
        {
          "type": "image_picker",
          "id": "image",
          "label": "Image"
        },
        {
          "type": "text",
          "id": "title",
          "label": "Title"
        },
        {
          "type": "textarea",
          "id": "description",
          "label": "Description"
        }
      ]
    }
  ],
  "max_blocks": 12,
  "presets": [
    {
      "name": "SimpleImageGrid",
      "blocks": [
        {
          "type": "image-block"
        }
      ]
    }
  ]
}
{% endschema %}

{% style %}

.simple-image-grid {
  padding-top: {{ section.settings.padding_top }}px;
  padding-bottom: {{ section.settings.padding_bottom }}px;
}
.simple-image-grid__container {
  display: flex;
  flex-wrap: wrap;
  gap: 24px;
  justify-content: center;
  max-width: var(--page-width);
  margin: 0 auto;
}
.simple-image-grid__block {
  flex: 1 1 350px;
  box-sizing: border-box;
  text-align: center;
}
.simple-image-grid__image {
  width: 100%;
  height: auto;
  margin-bottom: 12px;
  object-fit: cover;
  object-position: center;
  {% if section.settings.image_ratio == 'portrait' %}
    aspect-ratio: 460 / 600;
  {% elsif section.settings.image_ratio == 'square' %}
    aspect-ratio: 1 / 1;
  {% elsif section.settings.image_ratio == 'landscape' %}
    aspect-ratio: 16 / 9;
  {% else %}
    aspect-ratio: auto;
  {% endif %}
}
.simple-image-grid__title {
  font-weight: 300;
  font-size: 28px;
  line-height: 110%;
  letter-spacing: 0%;
  text-align: center;
  vertical-align: bottom;
}

.simple-image-grid__description {
  font-weight: 400;
  font-size: 16px;
  line-height: 150%;
  letter-spacing: 0%;
  text-align: center;

}
{% endstyle %}
